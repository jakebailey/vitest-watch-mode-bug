{
    "compilerOptions": {
        "lib": [
            "ES2021"
        ],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2021",
        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": true,

        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowUnusedLabels": false,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    }
}
